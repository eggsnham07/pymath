#!/usr/bin/env python3
import tkinter as tk
import os
from pathlib import Path

class App(tk.Frame):
    def __init__(self, master=None):
        super().__init__(master)
        self.master = master
        self.pack()
        self.init_gui()

    def init_gui(self):
        self.en = tk.Entry(self.master, width=30)

    def install(self):
        os.system("cd " + os.getcwd() + " && mv *.py pylib")

root = tk.Tk()
root.geometry("240x360")
app = App(master=root)
app.mainloop()
